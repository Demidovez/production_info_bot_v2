(function() {

document.getElementById('alpha089').addEventListener('update', function() {
var procent = Math.min(alpha089.value || 0, 100);

if(procent > 0) {
	if(procent >= 50) {
		group016.style.visibility = "hidden";

		group014.style.visibility = "visible";
		group014.style.transform = "rotate(" + (360/(100/procent)) + "deg)";
	} else {
		group016.style.visibility = "visible";
		group016.style.transform = "rotate(" + (360/(100/procent)) + "deg)";
	}
}
}, false);

document.getElementById('alpha082').addEventListener('update', function() {
var procent = Math.min(alpha082.value || 0, 100);

if(procent > 0) {
	if(procent >= 50) {
		group022.style.visibility = "hidden";

		group020.style.visibility = "visible";
		group020.style.transform = "rotate(" + (360/(100/procent)) + "deg)";
	} else {
		group022.style.visibility = "visible";
		group022.style.transform = "rotate(" + (360/(100/procent)) + "deg)";
	}
}
}, false);

document.getElementById('alpha086').addEventListener('update', function() {
var date = new Date(alpha086.value);
alpha086.value = date.getHours() + ':' + date.getMinutes();
}, false);

document.getElementById('alpha085').addEventListener('update', function() {
var date = new Date(alpha085.value);
alpha085.value = date.toLocaleDateString('ru-RU', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
  });
}, false);

document.getElementById('alpha001').addEventListener('update', function() {
if (alpha001.value >= 0) {
	alpha001.textColor = "#047F0B";
	textbox001.value = "+";
	textbox001.style.color = "#047F0B";
} else {
    alpha001.value = Math.abs(alpha001.value);
	alpha001.textColor = "#cc0000";
	textbox001.value = "-";
	textbox001.style.color = "#FF0000";
}
}, false);

